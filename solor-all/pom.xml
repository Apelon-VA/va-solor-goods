	<dependencies>
		<!-- Metadata -->
		<dependency>
			<groupId>gov.vha.isaac.isaac-metadata.modules</groupId>
			<artifactId>isaac-metadata-artifacts</artifactId>
			<classifier>all</classifier>
			<version>${isaac-metadata.version}</version>
			<type>econ.zip</type>
			<optional>true</optional> <!-- Not needed at runtime / transitively -->
		</dependency>

		<!-- Snomed -->
		<dependency>
			<groupId>gov.vha.isaac.terminology.converters</groupId>
			<artifactId>term-convert-rf2-econcept-sct</artifactId>
			<version>20150731-loader-2.1</version>
			<type>jbin.zip</type>
			<classifier>Full</classifier>
			<optional>true</optional> <!-- Not needed at runtime / transitively -->
			<scope>compile</scope>
		</dependency>
		
		<!-- RxNorm -->
		<dependency>
			<groupId>gov.vha.isaac.terminology.converters</groupId>
			<artifactId>term-convert-rxnorm-econcept</artifactId>
			<version>2015.08.03-loader-4.2</version>
			<type>jbin.zip</type>
			<scope>compile</scope>
			<optional>true</optional>  <!-- Not needed at runtime / transitively -->
		</dependency>
		
		<!-- LOINC -->
		<dependency>
			<groupId>gov.vha.isaac.terminology.converters</groupId>
			<artifactId>term-convert-loinc-econcept</artifactId>
			<version>2.52-loader-4.2</version>
			<type>jbin.zip</type>
			<scope>compile</scope>
			<optional>true</optional>  <!-- Not needed at runtime / transitively -->
		</dependency>
	</dependencies>

	
	<build>
		<plugins>
			<!-- Unpack data projects, load econcepts files,repack database -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<executions>
					<execution>
						<id>extract-econcept-SCT-and-metadata</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<includeArtifactIds>term-convert-rf2-econcept-sct,isaac-metadata-artifacts</includeArtifactIds>
							<outputDirectory>${project.build.directory}/data</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>extract-loinc-econcept</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<includeArtifactIds>term-convert-loinc-econcept</includeArtifactIds>
							<outputDirectory>${project.build.directory}/data/loinc</outputDirectory>
						</configuration>
					</execution>
					<execution>
						<id>extract-rxnorm-econcept</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<includeArtifactIds>term-convert-rxnorm-econcept</includeArtifactIds>
							<outputDirectory>${project.build.directory}/data/rxnorm</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
		
			<plugin>
				<groupId>gov.vha.isaac</groupId>
				<artifactId>isaac-mojo</artifactId>
				
				<dependencies>
					
					<!--  TODO move this out of isaac-gui  dependency>
						<groupId>gov.vha.isaac.gui.modules</groupId>
						<artifactId>db-processing-rules</artifactId>
						<version>${isaac-gui.version}</version>
					</dependency-->
					
				</dependencies>
				<executions>
					<execution>
						<id>set-termstore-properties</id>
						<goals>
							<goal>set-termstore-properties</goal>
						</goals>
						<configuration>
							<datastoreRootLocation>${project.build.directory}/${project.build.finalName}${resultArtifactClassifierWithLeadingHyphen}.data/</datastoreRootLocation>
						</configuration>
					</execution>

					<execution>
						<id>start-termstore</id>
						<goals>
							<goal>startup-isaac</goal>
							<goal>start-heap-ticker</goal>
							<goal>start-tasks-ticker</goal>
							<goal>count-concepts</goal>
						</goals>
					</execution>
					
					<execution>
						<id>load-onto-development</id>
						<goals>
							<goal>load-onto-development</goal>
						</goals>
						<configuration>
							<econFileStrings>
								<econFileString>${project.build.directory}/data/isaac/metadata/econ/IsaacMetadataAuxiliary.econ</econFileString>
								<econFileString>${project.build.directory}/data/SnomedCoreEConcepts.jbin</econFileString>
								<econFileString>${project.build.directory}/data/rxnorm/RRF-RXN.jbin</econFileString>
								<econFileString>${project.build.directory}/data/loinc/loincEConcepts.jbin</econFileString>
							</econFileStrings>
						</configuration>
					</execution>
					
					<execution>
						<id>count-after-load</id>
						<goals>
							<goal>count-concepts</goal>
						</goals>
					</execution>
					
					<execution>
						<id>index</id>
						<goals>
							<goal>index-termstore</goal>
						</goals>
					</execution>
					
					<!-- Apply the Solor overlay rules -->
					<!--execution>  Broken at the moment
						<id>execute rules</id>
						<goals>
							<goal>execute-transforms</goal>
						</goals>
						<configuration>
							<summaryOutputFolder>${project.build.directory}/${project.build.finalName}${resultArtifactClassifierWithLeadingHyphen}.data/META-INF/maven/${project.groupId}/${project.artifactId}</summaryOutputFolder>
							<transforms>
								<Transform>
									<name>Generate Missing Preferred Terms</name>
								</Transform>
								<Transform>
									<name>RxNorm Hierarchy Additions</name>
								</Transform>
								<Transform>
									<name>LOINC spreadsheet rules</name>
								</Transform>
								<Transform>
									<name>RxNorm spreadsheet rules</name>
								</Transform>
							</transforms>
						</configuration>
					</execution-->
					
					<execution>
						<id>classify</id>
						<goals>
							<goal>full-classification</goal>
							<goal>stop-heap-ticker</goal>
							<goal>stop-tasks-ticker</goal>
							<goal>shutdown-isaac</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>